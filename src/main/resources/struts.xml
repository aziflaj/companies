<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>

    <package name="crud" extends="struts-default">
        <interceptors>
            <interceptor name="demo-interceptor"
                         class="com.aziflaj.companies.DemoInterceptor"/>
        </interceptors>

        <default-action-ref name="index"/>

        <action name="index" class="com.aziflaj.companies.IndexAction">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="helloWorld" class="com.aziflaj.companies.HelloWorldAction">
            <interceptor-ref name="demo-interceptor"/>
            <result name="input">/jsp/index.jsp</result>
            <result>/WEB-INF/jsp/helloWorld.jsp</result>
        </action>

        <action name="companies" class="com.aziflaj.companies.CompaniesAction">
            <result name="success">/WEB-INF/jsp/companies.jsp</result>
            <result name="error">/WEB-INF/jsp/error.jsp</result>
        </action>
    </package>
</struts>
